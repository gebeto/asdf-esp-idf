#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

PACKAGE_TAR_PATH="$ASDF_DOWNLOAD_PATH/sources.tar.gz"
tar -xzf "$PACKAGE_TAR_PATH" -C "$ASDF_INSTALL_PATH" --strip-components=1 || fail "Could not extract $PACKAGE_TAR_PATH"
cd "$ASDF_INSTALL_PATH"
./install.sh
