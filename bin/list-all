#!/usr/bin/env bash

set -euo pipefail

current_script_path=${BASH_SOURCE[0]}
plugin_dir=$(dirname "$(dirname "$current_script_path")")

# shellcheck source=./lib/utils.bash
source "${plugin_dir}/lib/utils.bash"

list_all_versions() {
	git ls-remote --tags https://github.com/espressif/esp-idf | awk '{
		# 1. Get the second field
		field = $2

		# 2. Remove the "refs/tags/" prefix
		# substr(string, start_position)
		# The prefix is 11 characters long ("refs/tags/")
		version = substr(field, 12)

		# 3. Remove the "^{}" suffix if it exists
		# gsub(regex, replacement, string)
		gsub(/\^\{\}/, "", version)

		# 4. Print the result
		print version
	}'
}

list_all_versions | sort_versions | xargs echo
